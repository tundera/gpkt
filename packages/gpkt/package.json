{
  "name": "gpkt",
  "version": "0.1.8",
  "description": "Create, build, and publish new packages with the gpkt scaffolding toolkit",
  "license": "MIT",
  "author": {
    "name": "Philip Johnston",
    "url": "https://github.com/tundera",
    "email": "tunderadev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tundera/gpkt",
    "directory": "packages/gpkt"
  },
  "keywords": [
    "gpkt",
    "package",
    "generator"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "templates",
    "README.md"
  ],
  "bin": "./bin/gpkt.js",
  "scripts": {
    "build": "unbuild",
    "stub": "unbuild --stub",
    "dev": "esno src/cli.ts new my-cli --project-directory ../../../example-cli --preset cli",
    "typecheck": "tsc --noEmit",
    "lint": "TIMING=1 eslint --ext .ts,.tsx,.js,.jsx --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@babel/core": "7.18.10",
    "@babel/preset-env": "7.18.10",
    "async-retry": "1.3.3",
    "colorette": "2.0.19",
    "console-clear": "1.1.1",
    "convert-hrtime": "5.0.0",
    "cpy": "^9.0.1",
    "cross-spawn": "7.0.3",
    "ejs": "3.1.8",
    "execa": "6.1.0",
    "globby": "13.1.2",
    "got": "12.3.1",
    "gradient-string": "^2.0.1",
    "jscodeshift": "0.13.1",
    "merge-anything": "^5.0.2",
    "ora": "^6.1.2",
    "prompts": "2.4.2",
    "react": "18.2.0",
    "read-pkg": "^7.1.0",
    "rimraf": "^3.0.2",
    "tar": "6.1.11",
    "unconfig": "^0.3.5",
    "update-check": "1.5.4",
    "validate-npm-package-name": "4.0.0",
    "valtio": "1.6.3",
    "yaml": "2.1.1",
    "yargs": "17.5.1"
  },
  "devDependencies": {
    "@gpkt/tsconfig": "workspace:*",
    "@types/async-retry": "1.4.4",
    "@types/console-clear": "1.1.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/ejs": "3.1.1",
    "@types/eslint": "8.4.5",
    "@types/gradient-string": "^1.1.2",
    "@types/jscodeshift": "0.11.5",
    "@types/node": "^18.7.1",
    "@types/prettier": "2.7.0",
    "@types/prompts": "2.0.14",
    "@types/react": "18.0.17",
    "@types/rimraf": "3.0.2",
    "@types/tar": "6.1.2",
    "@types/validate-npm-package-name": "4.0.0",
    "@types/yargs": "^17.0.11",
    "@vitejs/plugin-react": "2.0.0",
    "c8": "7.12.0",
    "eslint": "8.21.0",
    "eslint-config-gpkt": "workspace:*",
    "esno": "^0.16.3",
    "jiti": "^1.14.0",
    "prettier": "^2.7.1",
    "typescript": "^4.9.5",
    "unbuild": "^0.8.8",
    "unplugin": "0.9.0",
    "vite-tsconfig-paths": "3.5.0",
    "vitest": "0.21.1"
  }
}
